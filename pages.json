{
	"easycom": {
		"^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "首页"
			}
		},
		{
			"path": "pages/goods/goods",
			"style": {
				"navigationBarTitleText": "商品"
			}
		}
	    ,{
            "path" : "pages/cart/cart",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "购物车",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/user/user",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "我的",
                "enablePullDownRefresh": false
            }
        }
        ,{
            "path" : "pages/auth/login",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "登录",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/auth/register",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "注册",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/user/baseinfo",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "修改个人信息",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/detail/detail",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "图书详情",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/cart/above",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "订单预览",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/cart/place",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "收货地址",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/cart/addplace",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "增加地址信息",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/cart/upteplace",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "更新地址",
                "enablePullDownRefresh": false
            }
            
        }
    ],
	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationBarTitleText": "uView",
		"navigationBarBackgroundColor": "#1296db",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
	    "color": "#2c2c2c",
	    "selectedColor": "#1296db",
	    "borderStyle": "black",
	    "backgroundColor": "#ffffff",
	    "list": [{
	        "pagePath": "pages/index/index",
	        "iconPath": "static/icon/首页.png",
	        "selectedIconPath": "static/icon/首页 (1).png",
	        "text": "首页"
	    }, {
	        "pagePath": "pages/goods/goods",
	        "iconPath": "static/icon/商品.png",
	        "selectedIconPath": "static/icon/商品 (1).png",
	        "text": "商品"
	    }, {
	        "pagePath": "pages/cart/cart",
	        "iconPath": "static/icon/购物车.png",
	        "selectedIconPath": "static/icon/购物车 (1).png",
	        "text": "购物车"
	    }, {
	        "pagePath": "pages/user/user",
	        "iconPath": "static/icon/我的.png",
	        "selectedIconPath": "static/icon/我的 (1).png",
	        "text": "我的"
	    }]
	}
}
